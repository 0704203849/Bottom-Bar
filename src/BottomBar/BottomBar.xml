<?xml version="1.0" encoding="utf-8" ?>
<widget id="BottomBar.widget.BottomBar" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Bottom bar</name>
    <description>This widget is used as a Navigation Bar in a mobile or tab application.</description>

    <icon />

    <properties>
        <property key="itemGroup" type="object" isList="true">
            <caption>Tab item</caption>
            <category>Data source</category>
            <description>Add tabs to show in your bottom bar</description>
            <properties>

                <property key="WidgetActions" type="enumeration" defaultValue="doNothing">
                    <caption>On click</caption>
                    <category>Events</category>
                    <description/>
                    <enumerationValues>
                        <enumerationValue key="doNothing">Do nothing</enumerationValue>
                        <enumerationValue key="showPage">Show a page</enumerationValue>
                        <enumerationValue key="callMicroflow">Call a microflow</enumerationValue>
                    </enumerationValues>
                </property>

                <property key="displayPageMicroflow" type="microflow" required="false">
                    <caption>Microflow</caption>
                    <category>Events</category>
                    <description>Microflow to execute</description>
                    <returnType type="Boolean" />
                </property>

                <property key="displayPage" type="form" required="false">
                    <caption>Page</caption>
                    <category>Events</category>
                    <description>The page to open</description>
                </property>
             
                <property key="displayText" type="string" required="false">
                    <caption>Name</caption>
                    <category>Styling</category>
                    <description>Add a tab name</description>
                </property>
                
                <property key="iconClass" type="string" required="false">
                    <caption>CSS class</caption>
                    <category>Styling</category>
                    <description>Add a css class for an icon</description>
                </property>

               <!-- <property key="displayWithMicroflow" type="boolean" defaultValue="true">
                    <caption>Use microflow?</caption>
                    <category>General</category>
                    <description>Choose whether to display page with a microflow!</description>
                </property>-->

            </properties>    
        </property>
    </properties>
</widget>
